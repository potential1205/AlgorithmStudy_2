def binary(dduck , n,m, start, end):
    if start>end:
        return None
    mid=(start+end)//2
    sum=0
    global max_mid
    for i in range(n):
        sum+=dduck[i]-mid
    if sum>=m:
        if mid>max_mid:
            max_mid=mid
        return binary(dduck,n,m,mid+1,end)
    else:
        return binary(dduck,n,m,start,mid-1)

n,m=map(int,input().split())
dduck=list(map(int,input().split()))
dduck_max=max(dduck)
max_mid=-1
binary(dduck,n,m,0,dduck_max-1)
print(max_mid)